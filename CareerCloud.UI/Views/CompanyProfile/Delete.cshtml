@model CareerCloud.Pocos.CompanyProfilePoco

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this, this action cannot be undone and  will delete all affiliations including posted jobs all location branches ?</h3>
<div>
    <h4>
        @{
            var Name = Model.CompanyDescriptions.Count() <= 0 ? "" : Model.CompanyDescriptions.FirstOrDefault().CompanyName;
            @:@Name
        }
    </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @if (Model.CompanyDescriptions.Count() > 0)
            {
                @:@Html.DisplayNameFor(model => model.CompanyDescriptions.First().CompanyDescription)
            }

        </dt>
        <dd class="col-sm-10">
            @if (Model.CompanyDescriptions.Count() > 0)
            {
                @:@Html.DisplayNameFor(model => model.CompanyDescriptions.First().CompanyDescription)
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyWebsite)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyWebsite)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContactPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContactPhone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContactName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContactName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> | 
        <a asp-action="Details" asp-route-Id ="@Model.Id" > Cancel </a>
    </form>
</div>
