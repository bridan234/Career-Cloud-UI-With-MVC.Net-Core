@model CareerCloud.Pocos.ApplicantJobApplicationPoco

@{
    ViewData["Title"] = "Create";
}

<h1>Apply</h1>

<h4>New Job</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Applicant" class="control-label"></label>
                <select asp-for="Applicant" class ="form-control" asp-items="ViewBag.Applicant"><option value="" dir="auto"> -|- Select an Applicanat -|- </option></select>
            </div>
            <div class="form-group">
                <label asp-for="Job" class="control-label"></label>
                <select asp-for="Job" class ="form-control" asp-items="ViewBag.Job"><option value="" dir="auto"> -|- Select A Job -|- </option></select>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationDate" class="control-label"></label>
                <input asp-for="ApplicationDate" class="form-control" value="@DateTime.Now" disabled/>
                <span asp-validation-for="ApplicationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
