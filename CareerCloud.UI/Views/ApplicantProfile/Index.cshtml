@model IEnumerable<CareerCloud.Pocos.ApplicantProfilePoco>

@{
    ViewData["Title"] = "List of Applicants";
    var a = Model;

}

    <h1>List of Applicants</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
           <th>#@{int i = 0;}</th>
            <th>
                @Html.DisplayNameFor(model => model.SecurityLogin.FullName)
            </th>
            <th>
                Salary / Rate
            </th>
            <th>
                Address
            </th>
            <th>...</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{++i;}
                    @i
                </td>
                <td>
                    <input type="hidden" asp-for="@item.Id" />
                    @Html.ActionLink(item.SecurityLogin.FullName, "Details", new { Id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Currency)
                    @Html.DisplayFor(modelItem => item.CurrentSalary) at
                    @Html.DisplayFor(modelItem => item.CurrentRate)/hr
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)<br />
                    @Html.DisplayFor(modelItem => item.City),
                    @Html.DisplayFor(modelItem => item.Province),
                    @Html.DisplayFor(modelItem => item.Country)<br />
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>

                <td>
                    <input type="hidden" asp-for="@item.Id" />
                    @Html.ActionLink("Edit", "Edit", new { Id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { Id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { Id = item.Id })<br />
                    @Html.ActionLink("Skills", "Index", "ApplicantSkill", new { Applicant = item.Id }) |
                    @Html.ActionLink("Job Applications", "Index", "ApplicantJobApplication", new { Applicant = item.Id })<br />
                    @Html.ActionLink("Educations", "Index", "ApplicantEducation", new { Applicant = item.Id }) |
                    @Html.ActionLink("Work History", "Index", "ApplicantWorkHistory", new { Applicant = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
