@model CareerCloud.Pocos.ApplicantResumePoco

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Resume Summary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Applicant" class="control-label"></label>
                <input type="hidden" asp-for="Applicant" value="@ViewBag.empID" class="form-control" />
                <label for="DisplayName" class="form-control" >@ViewBag.empName</label>
                @*<select asp-for="Applicant" class ="form-control" asp-items="ViewBag.Applicant" disabled><option value=""> -|- Select Applicant -|- </option></select>*@
            </div>

            <div class="form-group">
                <label asp-for="Resume" class="control-label"></label>
                @*<input asp-for="Resume" class="form-control" />*@
                <textarea class="form-control" cols="50" name="Resume" rows="8"></textarea>


                <span asp-validation-for="Resume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastUpdated" class="control-label"></label>
                <input asp-for="LastUpdated" class="form-control" disabled />
                <span asp-validation-for="LastUpdated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="applicantprofile" asp-route-Id="@ViewData["emp"]">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
