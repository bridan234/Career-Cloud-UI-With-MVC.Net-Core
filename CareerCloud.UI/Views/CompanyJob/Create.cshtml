@model CareerCloud.Pocos.CompanyJobPoco

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Job Posting</h1>

<h4>Company Job</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Company" class="control-label"></label>
                <select asp-for="Company" class="form-control" asp-items="ViewBag.Company"><option value=""> -|- Select Company -|- </option></select>
            </div>
            <div class="form-group">
                <label asp-for="CompanyJobDescription.JobName" class="control-label"></label>
                <input asp-for="CompanyJobDescription.JobName" class="form-control" />
                <span asp-validation-for="CompanyJobDescription.JobName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyJobDescription.JobDescriptions" class="control-label"></label>
                <input asp-for="CompanyJobDescription.JobDescriptions" class="form-control" />
                <span asp-validation-for="CompanyJobDescription.JobDescriptions" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsInactive" /> @Html.DisplayNameFor(model => model.IsInactive)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCompanyHidden" /> @Html.DisplayNameFor(model => model.IsCompanyHidden)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="companyprofile">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
